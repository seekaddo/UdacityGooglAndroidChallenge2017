<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.addodennis.halloweenparty.MainActivity">

<ImageView
    android:id="@+id/hallowimg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/hallcos2017"
    android:contentDescription="androidPartyimage" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome to Vienna Halloween Party!"
    android:gravity="center"
    android:layout_marginBottom="110dp"
    android:layout_alignParentBottom="true"
    android:textSize="36sp"
    android:textAlignment="center"
    android:textColor="@android:color/white"
    android:fontFamily="roboto-regular"/>
<!--
Align the text to the end of the parent
and to the right. Using wrap_content here for the
width and height is good here.
-->
<TextView
    android:id="@+id/hosttext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:padding="20dp"
    android:textSize="19sp"
    android:textColor="@android:color/white"
    android:fontFamily="sans-serif-light"
    android:text="Host:         Seek Addo!" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/hosttext"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="20sp"
    android:textSize="19sp"
    android:textColor="@android:color/white"
    android:fontFamily="sans-serif-light"
    android:text="Location: Liesing, Vienna!" />



</RelativeLayout>
